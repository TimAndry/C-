@model Activity
<div id="top">
    <h1 class = "top">Dojo Activity Center</h1>
    <nav>
        <li><a asp-action="Show">Home</a></li>
        <li><a asp-action="Logout">Logout</a></li>
    </nav>
</div>
<div id="wrapper">
    <h2>Create An Activity</h2>
    <br><br><br>

    <form asp-action="AActivity" asp-controller="Home" method="POST">
        
        <input asp-for="UserId" type="hidden" value="@ViewBag.User.UserId">

        <input asp-for="Coordinator" type="hidden" value="@ViewBag.User.FirstName @ViewBag.User.LastName">

        <label asp-for="Title"></label>
        <input asp-for="Title">
        <span asp-validation-for="Title" class="error"></span><br><br>

        <label asp-for="Date"></label>
        <input type="date" asp-for="Date"><br>
        <p class="error">@ViewBag.DateErrors</p>
        <span asp-validation-for="Date" class="error"></span><br>
            
        <label asp-for="Duration"></label>
        <input asp-for="Duration">
        <span asp-validation-for="Duration" class="error"></span><br><br>

        <label asp-for="TimeType"></label>
        <select asp-for="TimeType">
            <option value="Minutes">Minutes</option>
            <option value="Hours">Hours</option>
            <option value="Days">Days</option>
        </select>
        <span asp-validation-for="TimeType" class="error"></span><br><br>

        <label asp-for="Description"></label>
        <input asp-for="Description">
        <span asp-validation-for="Description" class="error"></span><br><br>

        <button type="submit">Create ACtivity</button>
    </form>
</div>