@model RazorFun.Numbers

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
        <!-- In this context '~' refers to the wwwroot folder -->
        <link rel="stylesheet" href="~/css/style.css"/>
    </head>
    <body id="wrapper">
        <h1>Here is an array of numbers!</h1>
        @{
            foreach(var number in @Model.numbers){
                 <p>@number</p>
            }
        }
    </body>
</html>
